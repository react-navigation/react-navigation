{
  "description": "Routing and navigation for your React Native apps",
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-navigation/react-navigation.git"
  },
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com> (https://github.com/satya164/), Micha≈Ç Osadnik <micosa97@gmail.com> (https://github.com/osdnk/)",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typecheck": "tsc --noEmit --composite false",
    "test": "jest",
    "clean": "lerna run clean",
    "build": "lerna run prepack",
    "publish": "lerna publish",
    "release": "run-s build publish",
    "example": "yarn workspace @react-navigation/example"
  },
  "engines": {
    "node": "^22.12.0"
  },
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@commitlint/config-conventional": "^19.8.1",
    "@evilmartians/lefthook": "^1.11.13",
    "@lerna-lite/cli": "^4.11.0",
    "@lerna-lite/publish": "^4.11.1",
    "@lerna-lite/run": "^4.11.1",
    "@react-native/babel-preset": "0.81.1",
    "@types/babel__core": "^7",
    "check-dependency-version-consistency": "^5.0.0",
    "commitlint": "^19.8.1",
    "eslint": "^9.29.0",
    "eslint-config-satya164": "^5.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.5.3",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "require",
        "react-native",
        "source"
      ]
    },
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?@react-native|react-native|react-native-reanimated|react-native-worklets|react-native-gesture-handler|react-native-safe-area-context)/)"
    ]
  },
  "prettier": {
    "quoteProps": "as-needed",
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
